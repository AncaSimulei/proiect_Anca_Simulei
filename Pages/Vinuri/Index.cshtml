@page
@model proiect_Anca_Simulei.Pages.Vinuri.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Vin[0].Nume_Vin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vin[0].Producator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vin[0].Pret)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vin[0].DataImbutelierii)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vin[0].Domeniu.NumeDomeniu)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Vin[0].CategoriiVin)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.VinD.Vinuri)
        {
            string selectedRow = "";
            if (item.ID == Model.VinID)
            {
                selectedRow = "table-success";
            }
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.Nume_Vin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producator)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pret)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataImbutelierii)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Domeniu.NumeDomeniu)
            </td>

            <td>
                @{ foreach (var category in item.CategoriiVin)
                                    {
                    @category.Categorie.ID @: @category.Categorie.NumeCategorie <br />
                } }
            </td>

            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
